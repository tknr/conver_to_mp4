#!/bin/bash -x
export IFS=$'\n'
DATE=`date +%Y_%m_%d`

argv=("$@")
CMDNAME=`basename $0`

if [ $# -eq 0 ]; then
    echo "Usage : ${CMDNAME} [dirname]"
    exit 1
fi

## https://qiita.com/hit/items/e95298f689a1ee70ae4a                                                                                                                                                               
_pcnt=`pgrep -fo ${CMDNAME} | wc -l`               
if [ ${_pcnt} -gt 1 ]; then                        
	echo "This script has been running now. proc : ${_pcnt}"
	exit 1                                           
fi


THREADS=$(( (`cat /proc/cpuinfo | grep processor | wc -l` +1) / 4))

EXTLIST=`cat /etc/mime.types | grep -v "#" | grep video | grep -v mp4 | tr "\t" " " | tr -s " " | cut -d " " -f 2 | grep -v "/" | sort | uniq`

EXTLIST+=(
"mov"
"mkv"
"..avi"
"avi.mp4"
"wmv.mp4"
"flv.mp4"
"mpeg"
"mpg"
"flv"
"rmvb"
"wmv"
"M4A"
"avi"
"ts")

EXTLIST=($(echo "${EXTLIST[*]}" | sort | uniq))

for ARG_DIR in ${argv}
do
	DIR=$ARG_DIR
	for EXT in ${EXTLIST[@]}
	do
		echo "${EXT}"
		for FILENAME in `find "${DIR}" -name "*.${EXT}" | sort`
		do
			echo "${FILENAME}"
			nice -n 19 ffmpeg -y -i "${FILENAME}" -movflags +faststart -codec:v libx264 -preset:v veryslow -threads ${THREADS} -acodec aac -b:a 256k "${FILENAME%.${EXT}}.mp4" || continue
      			rm -f "${FILENAME}"
		done
	done
done
